<% content_for(:title, project['title']) %>
<article>

  <div id="work-description">
    <h3>
      <%= project['title'] %>
    </h3>
    <p><%= project['description'] %></p>
  </div>

  <div id="work-gallery">
    <ul class="portfolio-gallery">
      <% project['image'].each do |image| %>
      <li><%= image_tag "/images/work/#{image}" %></li>
      <% end %>
    </ul>

  <% if project['video'] %>
    <% project['video'].each do |video| %>
      <div class="video">
        <div class="video-wrapper">
          <iframe src="<%= video %>" frameborder="0" allowfullscreen></iframe>
        </div>
      </div>
    <% end %>
  <% end %>
  </div>

</article>
