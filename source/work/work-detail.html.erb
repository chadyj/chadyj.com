<% content_for(:title, project['title']) %>
<h3><%= link_to "Work", "/work/index.html" %> / <%= project['title'] %></h3>
<p><%= project['description'] %></p>

<% project['image'].each do |image| %>
  <ul class="portfolio-gallery">
    <li><%= tag :img, :src => "../../images/work/#{image}" %></li>
  </ul>
<% end %>

<% if project['video'] %>
  <% project['video'].each do |video| %>
    <div class="video">
      <div class="video-wrapper">
        <iframe src="<%= video %>" frameborder="0" allowfullscreen></iframe>
      </div>
    </div>
  <% end %>
<% end %>
